@model IEnumerable<CinemaTicketingSystem.Models.Concession>

@{
    ViewData["Title"] = "Concessions Menu";
}

<div class="container py-4">
    <h2 class="text-center mb-4">🍿 Concessions Menu</h2>

    <div class="row">
        @foreach (var category in Model.GroupBy(c => c.Category))
        {
            <div class="col-12 mb-4">
                <h3 class="border-bottom pb-2">@category.Key</h3>
                <div class="row">
                    @foreach (var item in category)
                    {
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="fas fa-utensils fa-3x text-muted"></i>
                                    </div>
                                }
                                <div class="card-body">
                                    <h5 class="card-title">@item.Name</h5>
                                    <p class="card-text text-muted">@item.Description</p>
                                    <p class="card-text">
                                        <strong class="text-success">@item.Price.ToString("C")</strong>
                                        @if (item.StockQuantity < 10)
                                        {
                                            <span class="badge bg-warning float-end">Low Stock</span>
                                        }
                                    </p>
                                    <div class="d-flex flex-wrap gap-1">
                                        @if (item.IsVegetarian)
                                        {
                                            <span class="badge bg-success">Vegetarian</span>
                                        }
                                        @if (item.IsVegan)
                                        {
                                            <span class="badge bg-success">Vegan</span>
                                        }
                                        @if (item.ContainsNuts)
                                        {
                                            <span class="badge bg-danger">Contains Nuts</span>
                                        }
                                        @if (item.ContainsDairy)
                                        {
                                            <span class="badge bg-danger">Contains Dairy</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>