@model CinemaTicketingSystem.Models.Showtime

@{
    ViewData["Title"] = "Book Tickets";
}

<h2>Book Tickets for @Model.Movie?.Title</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Showtime Details</h5>
                <p><strong>Cinema:</strong> @Model.Cinema?.Name</p>
                <p><strong>Time:</strong> @Model.StartTime.ToString("f")</p>
                <p><strong>Available Seats:</strong> @Model.AvailableSeats</p>
                <p><strong>Price per ticket:</strong> @Model.Price.ToString("C")</p>

                <form asp-action="BookTickets" asp-route-id="@Model.ShowtimeId" method="post">
                    <div class="form-group">
                        <label for="numberOfTickets">Number of Tickets:</label>
                        <input type="number" id="numberOfTickets" name="numberOfTickets"
                               class="form-control" min="1" max="@Model.AvailableSeats"
                               required style="max-width: 100px;" />
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Confirm Booking</button>
                </form>
            </div>
        </div>
    </div>
</div>