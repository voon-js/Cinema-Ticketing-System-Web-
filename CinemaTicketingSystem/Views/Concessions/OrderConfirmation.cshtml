@model CinemaTicketingSystem.Models.ConcessionOrder

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-success text-white text-center">
                    <h3 class="mb-0"><i class="fas fa-check-circle me-2"></i>Order Confirmed!</h3>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-utensils fa-5x text-success mb-3"></i>
                        <h4>Thank you for your concession order!</h4>
                        <p class="text-muted">Your snacks will be ready for pickup at the concession stand.</p>
                    </div>

                    <!-- Order Details -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Order Details</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Order #:</strong> @Model.ConcessionOrderId</p>
                                    <p><strong>Order Date:</strong> @Model.OrderDate.ToString("f")</p>
                                    <p><strong>Status:</strong> <span class="badge bg-info">@Model.Status</span></p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Total Amount:</strong> <span class="text-success fw-bold">@Model.TotalAmount.ToString("C")</span></p>
                                    <p><strong>Booking Reference:</strong> #@Model.BookingId</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Movie Booking Info -->
                    @if (Model.Booking?.Showtime != null)
                    {
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">Movie Details</h5>
                            </div>
                            <div class="card-body">
                                <p><strong>Movie:</strong> @Model.Booking.Showtime.Movie?.Title</p>
                                <p><strong>Showtime:</strong> @Model.Booking.Showtime.StartTime.ToString("f")</p>
                                <p><strong>Cinema:</strong> @Model.Booking.Showtime.Cinema?.Name</p>
                            </div>
                        </div>
                    }

                    <!-- Order Items -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Order Items</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Item</th>
                                            <th>Quantity</th>
                                            <th>Price</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.OrderItems)
                                        {
                                            <tr>
                                                <td>@item.Concession?.Name</td>
                                                <td>@item.Quantity</td>
                                                <td>@item.UnitPrice.ToString("C")</td>
                                                <td>@item.TotalPrice.ToString("C")</td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr class="table-primary">
                                            <td colspan="3" class="text-end fw-bold">Grand Total:</td>
                                            <td class="fw-bold">@Model.TotalAmount.ToString("C")</td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Pickup Instructions -->
                    <div class="alert alert-info">
                        <h6><i class="fas fa-info-circle me-2"></i>Pickup Instructions</h6>
                        <ul class="mb-0">
                            <li>Please arrive at least 30 minutes before your movie</li>
                            <li>Bring your booking confirmation (#@Model.BookingId)</li>
                            <li>Pick up your order at the concession counter</li>
                            <li>Enjoy your movie and snacks! 🍿🎬</li>
                        </ul>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                        <a asp-controller="Booking" asp-action="MyBookings" class="btn btn-primary me-md-2">
                            <i class="fas fa-ticket-alt me-2"></i>View My Bookings
                        </a>
                        <a asp-controller="Concessions" asp-action="MyOrders" class="btn btn-outline-primary me-md-2">
                            <i class="fas fa-utensils me-2"></i>View My Orders
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-2"></i>Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            border: none;
        }

        .card-header {
            font-weight: 600;
        }

        .table th {
            border-top: none;
            font-weight: 600;
            color: #495057;
        }

        .alert {
            border-left: 4px solid #0dcaf0;
        }
    </style>
}